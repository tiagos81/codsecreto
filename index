<body>
  <div class="container">
    <h1>Código Secreto</h1>
    <p>Digite a senha de 6 dígitos:</p>
    <input type="password" id="password" maxlength="6">
    <button onclick="checkPassword()">✔ Entrar</button>
    <p id="message"></p>
  </div>
  
  <script>
    function checkPassword() {
      let input = document.getElementById("password").value;
      if (input === MAIN_PASSWORD) {
        document.getElementById("message").textContent = "✅ Acesso permitido!";
      } else {
        document.getElementById("message").textContent = "❌ Senha incorreta!";
      }
    }
  </script>

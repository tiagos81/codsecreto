  <script>
    async function loadEnv() {
        const response = await fetch('https://codsecreto-production.up.railway.app/env'); // Atualize com sua URL
        const env = await response.json();
        MAIN_PASSWORD = env.MAIN_PASSWORD;
        UNLOCK_PASSWORD = env.UNLOCK_PASSWORD;
    }
    
    let MAIN_PASSWORD = "";
    let UNLOCK_PASSWORD = "";
    loadEnv();
  </script>
